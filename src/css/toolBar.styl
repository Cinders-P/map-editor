#toolBar
	min-width 300px
	max-width 300px
	border-left 1px solid #ccc

#brush
	width 100%
	padding 5px
	box-sizing border-box
	& .viewer
		width 90%
		margin 0 5%
		border 1px solid #ddd
		box-sizing border-box
		height 400px
		padding 5px
		& .flex-row
			overflow auto
			height 100%
			width 100%
		& .tile
			margin-bottom 1px

.toolRow
	font-family Catamaran
	font-size 12px
	text-align center
	width 100%
	& + p
		width 90%
		margin 0 5%
		color dimgray
	& .box
		margin 10px
		padding 10px 15px 5px 15px
		border-radius 5px
		transition background-color 0.2s ease-out
	& .active
		background-color #eee
	& .pointer:hover
		background-color #eee
	& span div
		cursor pointer
